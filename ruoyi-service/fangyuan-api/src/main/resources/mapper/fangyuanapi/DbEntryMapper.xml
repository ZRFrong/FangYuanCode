<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.fangyuanapi.mapper.DbEntryMapper">
    
    <resultMap type="DbEntry" id="DbEntryResult">
        <result property="id"    column="id"    />
        <result property="heatNumber"    column="heat_number"    />
        <result property="isBanned"    column="is_banned"    />
        <result property="createdTime"    column="created_time"    />
        <result property="entryName"    column="entry_name"    />
    </resultMap>

    <sql id="selectDbEntryVo">
        select id, heat_number, is_banned, created_time, entry_name from db_entry
    </sql>

    <select id="selectDbEntryList" parameterType="DbEntry" resultMap="DbEntryResult">
        <include refid="selectDbEntryVo"/>
        <where>  
            <if test="entryName != null  and entryName != ''"> and entry_name like concat('%', #{entryName}, '%')</if>
        </where>
    </select>
    
    <select id="selectDbEntryById" parameterType="Long" resultMap="DbEntryResult">
        <include refid="selectDbEntryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertDbEntry" parameterType="DbEntry" useGeneratedKeys="true" keyProperty="id">
        insert into db_entry
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="heatNumber != null ">heat_number,</if>
            <if test="isBanned != null ">is_banned,</if>
            <if test="createdTime != null ">created_time,</if>
            <if test="entryName != null  and entryName != ''">entry_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="heatNumber != null ">#{heatNumber},</if>
            <if test="isBanned != null ">#{isBanned},</if>
            <if test="createdTime != null ">#{createdTime},</if>
            <if test="entryName != null  and entryName != ''">#{entryName},</if>
         </trim>
    </insert>

    <update id="updateDbEntry" parameterType="DbEntry">
        update db_entry
        <trim prefix="SET" suffixOverrides=",">
            <if test="heatNumber != null ">heat_number = #{heatNumber},</if>
            <if test="isBanned != null ">is_banned = #{isBanned},</if>
            <if test="createdTime != null ">created_time = #{createdTime},</if>
            <if test="entryName != null  and entryName != ''">entry_name = #{entryName},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDbEntryById" parameterType="Long">
        delete from db_entry where id = #{id}
    </delete>

    <delete id="deleteDbEntryByIds" parameterType="String">
        delete from db_entry where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>